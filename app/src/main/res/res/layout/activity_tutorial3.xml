<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#000000"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/Low_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#cc0000"
            android:fontFamily="sans-serif"
            android:text="High-Level Emergency"
            android:textSize="22sp">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#cc0000"
            android:text="Situation"
            android:fontFamily="sans-serif"
            android:textSize="22sp">
        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="If you are at gunpoint and you don't have the time to open the app and click on 'Bachao', use these quick tricks to save your life. "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:text="1. Draw a screen pattern - S."
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:layout_centerInParent="true"
            android:text="2. Press the power button three times in a row."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="0dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:text="3. Loudly say Bachao or Help Me"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textSize="18sp">

        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/high"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="Tutorial 2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:text="Next"
            android:background="@drawable/btn_high"
            android:onClick="goHome"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"/>

    </RelativeLayout>
</LinearLayout>
</ScrollView>