<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#000000"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#A0A0A0"
            android:onClick="goHome"
            android:text="HOME"
            android:fontFamily="sans-serif"
            android:drawableTop="@drawable/home_pressed"
            android:paddingTop="10sp"
            android:scaleType="fitCenter"
            android:focusable="true"
            android:background="@drawable/home_pressed" />

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#E3E3E3"
            android:onClick="goContact"
            android:drawableTop="@drawable/contact_normal"
            android:paddingTop="10sp"
            android:fontFamily="sans-serif-medium"
            android:text="CONTACTS"
            android:scaleType="fitCenter"
            android:background="@drawable/contact_normal" />

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imageButton4"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/imageButton4"
            android:layout_toStartOf="@+id/imageButton4"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#E3E3E3"
            android:onClick="goTrack"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/track_normal"
            android:fontFamily="sans-serif-medium"
            android:text="TRACK ME"
            android:background="@drawable/track_normal" />

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#E3E3E3"
            android:onClick="goSettings"
            android:fontFamily="sans-serif-medium"
            android:drawableTop="@drawable/settings_normal"
            android:paddingTop="10sp"
            android:text="SETTINGS"
            android:scaleType="fitCenter"
            android:background="@drawable/settings_normal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc0000"
            android:textSize="50dp"
            android:text="HELP"
            android:fontFamily="sans-serif-medium"
            android:onClick="goBachao"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>