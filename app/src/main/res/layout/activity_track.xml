<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#000000"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="1.0">

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#E3E3E3"
            android:onClick="goHome"
            android:text="HOME"
            android:fontFamily="sans-serif"
            android:drawableTop="@drawable/home_normal"
            android:paddingTop="10sp"
            android:scaleType="fitCenter"
            android:focusable="true"
            android:background="@drawable/home_normal" />

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#E3E3E3"
            android:onClick="goContact"
            android:drawableTop="@drawable/contact_normal"
            android:paddingTop="10sp"
            android:fontFamily="sans-serif-medium"
            android:text="CONTACTS"
            android:scaleType="fitCenter"
            android:background="@drawable/contact_normal" />

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imageButton4"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/imageButton4"
            android:layout_toStartOf="@+id/imageButton4"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#A0A0A0"
            android:onClick="goTrack"
            android:scaleType="fitCenter"
            android:drawableTop="@drawable/track_pressed"
            android:fontFamily="sans-serif-medium"
            android:text="TRACK ME"
            android:background="@drawable/track_pressed" />

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:backgroundTint="#E3E3E3"
            android:onClick="goSettings"
            android:fontFamily="sans-serif-medium"
            android:drawableTop="@drawable/settings_normal"
            android:paddingTop="10sp"
            android:text="SETTINGS"
            android:scaleType="fitCenter"
            android:background="@drawable/settings_normal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_id2"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="When do you wish to be tracked by the app?"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/text_id3"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="Track me for"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/round_button_add"
            android:gravity="center_vertical|center_horizontal"
            android:text="-"
            android:textSize="30dp"
            android:onClick="decreaseInteger"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp" />

        <Button
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_button_add"
            android:gravity="center_vertical|center_horizontal"
            android:text="+"
            android:textSize="30dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="increaseInteger"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Hours"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:drawableRight="@drawable/confirm"
            android:padding="16dp"
            android:text="Confirm"
            android:textSize="24sp" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>


</LinearLayout>
</ScrollView>
